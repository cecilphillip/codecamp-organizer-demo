        $(function () {
            var $sideMenu = $('div[name="side-menu"]');
            if ($sideMenu.length) {
                $sideMenu.pushpin({ offset: $sideMenu.offset().top });
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>



</html>
